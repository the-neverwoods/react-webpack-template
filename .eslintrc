{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "prefer-object-spread"
  ],
  "rules": {
    "max-len": [1, 120, 2, { ignoreComments: true }],
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "react/jsx-uses-react": 1,
    "eol-last": 2,
    "semi": [2, "always"],
    "arrow-parens": 2,
    "object-curly-spacing": [2, "always"],
    "key-spacing": 2,
    "indent": [2, 2],
    "quotes": [1, "backtick"]
  }
}